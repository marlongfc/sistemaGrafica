    <class>graficaatual.entidades.Bairro</class>
    <class>graficaatual.entidades.Cargo</class>
    <class>graficaatual.entidades.Cidade</class>
    <class>graficaatual.entidades.Colaborador</class>
    <class>graficaatual.entidades.Endereco</class>
    <class>graficaatual.entidades.Formulario</class>
    <class>graficaatual.entidades.Fornecedor</class>
